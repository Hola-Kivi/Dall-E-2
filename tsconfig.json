{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["esnext", "DOM"],
    "esModuleInterop": true,
    "paths": {
      "@/controller/*": ["./src/controller/*"]
    }
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "pages/api/post.ts"
  ]
}
